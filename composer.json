{
  "name": "slim/stepbystep",
  "description": "learn slim step by step ",
  "authors": [
    {
      "name": "TarekSherif",
      "email": "ENG.TAREK.SHERIF@gmail.com"
    }
  ],
  "require": {
    "slim/slim": "^3.12",
    "vlucas/phpdotenv": "^3.3",
    "tuupola/slim-basic-auth": "^3.2",
    "tuupola/slim-jwt-auth": "^3.3",
    "firebase/php-jwt": "^5.0",
    "monolog/monolog": "^1.24",
    "slim/twig-view": "^2.5"
  },
  "autoload": {
    "psr-4": {
      "App\\": "app"
    },
    "classmap": [
      "Classes"
    ]
  },
  "scripts": {
    "post-root-package-install": [
      "php -r \"file_exists('.env') || copy('.env.example', '.env');\""
    ]
  }
}
